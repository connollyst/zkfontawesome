<language-addon>
    <addon-name>zkfontawesome</addon-name>
    <depends>zul</depends>
    <language-name>xul/html</language-name>

    <version>
        <version-class>org.zkoss.fontawesome.Version</version-class>
        <version-uid>1.2</version-uid>
        <zk-version>5.0.5</zk-version><!-- or later -->
    </version>

    <component>
        <component-name>icon</component-name>
        <component-class>org.zkoss.fontawesome.Icon</component-class>
        <widget-class>zul.fontawesome.Icon</widget-class>
        <mold>
            <mold-name>default</mold-name>
            <mold-uri>mold/zkfontawesome.js</mold-uri>
            <css-uri>css/v470/font-awesome.min.css</css-uri>
        </mold>
    </component>
</language-addon>